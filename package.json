{
  "name": "lm-tools-bridge",
  "displayName": "lm-tools-bridge",
  "publisher": "jiangxiaoxu",
  "version": "1.0.9",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/jiangxiaoxu/-lm-tools-bridge.git"
  },
  "homepage": "https://github.com/jiangxiaoxu/-lm-tools-bridge#readme",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lm-tools-bridge.start",
        "title": "LM Tools Bridge: Start Server"
      },
      {
        "command": "lm-tools-bridge.stop",
        "title": "LM Tools Bridge: Stop Server"
      },
      {
        "command": "lm-tools-bridge.takeOver",
        "title": "LM Tools Bridge: Take Over Server"
      },
      {
        "command": "lm-tools-bridge.configureTools",
        "title": "LM Tools Bridge: Configure Tools"
      },
      {
        "command": "lm-tools-bridge.statusMenu",
        "title": "LM Tools Bridge: Status Menu"
      },
      {
        "command": "lm-tools-bridge.openHelp",
        "title": "LM Tools Bridge: Open Help"
      }
    ],
    "configuration": {
      "title": "LM Tools Bridge",
      "properties": {
        "lmToolsBridge.server.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start the MCP server on startup."
        },
        "lmToolsBridge.server.host": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "Host address for the MCP server (use localhost/loopback)."
        },
        "lmToolsBridge.server.port": {
          "type": "number",
          "default": 48123,
          "minimum": 1,
          "maximum": 65535,
          "description": "Port for the MCP server."
        },
        "lmToolsBridge.chat.modelId": {
          "type": "string",
          "default": "gpt-5-mini",
          "description": "Preferred model ID for Language Model API."
        },
        "lmToolsBridge.chat.modelFamily": {
          "type": "string",
          "default": "gpt-5-mini",
          "description": "Fallback model family if modelId is not found."
        },
        "lmToolsBridge.chat.maxIterations": {
          "type": "number",
          "default": 6,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum tool-calling iterations for a chat request."
        },
        "lmToolsBridge.tools.enabled": {
          "type": "array",
          "default": [
            "copilot_searchCodebase",
            "copilot_searchWorkspaceSymbols",
            "copilot_listCodeUsages",
            "copilot_findFiles",
            "copilot_findTextInFiles",
            "copilot_readFile",
            "copilot_listDirectory",
            "copilot_getErrors",
            "copilot_readProjectStructure",
            "copilot_getChangedFiles",
            "copilot_testFailure",
            "copilot_findTestFiles",
            "copilot_getDocInfo",
            "copilot_getSearchResults",
            "get_terminal_output",
            "terminal_selection",
            "terminal_last_command"
          ],
          "items": {
            "type": "string"
          },
          "description": "List of LM tool names enabled for MCP exposure."
        },
        "lmToolsBridge.tools.blacklist": {
          "type": "string",
          "default": "",
          "description": "Comma-separated substring patterns to hide/disable tools (case-insensitive). Blacklist takes precedence over enabled list."
        },
        "lmToolsBridge.tools.schemaDefaults": {
          "type": "object",
          "default": {
            "maxResults": 1000
          },
          "description": "Map of input property names to default values. When a tool schema has a property with the given name and no default, this value will be injected. Example: { \"maxResults\": 1000 }."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run bundle",
    "bundle": "node ./scripts/bundle.mjs",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/vscode": "^1.95.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.4.5"
  }
}
